# ===== SmartCar AI-Dealer: Configuration Template =====
# قم بنسخ هذا الملف وتسميته بـ .env ثم ضع قيمك الحقيقية

# 1. إعدادات التطبيق الأساسية
APP_NAME="SmartCar AI-Dealer"
APP_SECRET_KEY="your-super-secret-key-here"
DEBUG_MODE=False
LOG_LEVEL="INFO"

# 2. إعدادات قاعدة البيانات (SQLite)
DATABASE_PATH="smartcar.db"
DATABASE_ENCRYPTION_KEY=""

# 3. مفاتيح الذكاء الاصطناعي (Groq AI)
# احصل على مفتاحك من https://console.groq.com/
GROQ_API_KEY="gsk_your_key_here"
GROQ_MODEL="llama-3.2-11b-vision-preview"

# 4. إعدادات البريد الإلكتروني (SMTP)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SENDER_EMAIL="admin@example.com"
SENDER_PASSWORD="your-app-password"
SENDER_NAME="SmartCar Admin"
CONTACT_EMAIL="support@example.com"
SUPPORT_PHONE="+49000000000"

# 5. محرك التسعير (الأسعار الأساسية التقديرية)
BASE_PRICE_SEDAN=50000
BASE_PRICE_SUV=60000
BASE_PRICE_COUPE=55000
BASE_PRICE_HYBRID=65000
BASE_PRICE_ELECTRIC=70000
BASE_PRICE_PICKUP=58000

# 6. الأمان والحدود التقنية
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=120
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"